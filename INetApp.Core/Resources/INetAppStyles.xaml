    <Style x:Key="ButtonStart" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource app_Color}" />
        <Setter Property="BorderColor" Value="{StaticResource toolbar_Color}" />
        <Setter Property="TextColor" Value="{StaticResource white}" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
    </Style>

    <Style x:Key="BoxButtonApprove" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource toolbar_Color}"/>
    </Style>

    <Style x:Key="BoxButtonRefuse" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource very_light_grey}"/>
    </Style>

    
    <Style x:Key="ButtonApprove" TargetType="Button">
        <!--<Setter Property="ColorControlHighlight" Value="{StaticResource favorite_ripple_dark_Color}" />-->
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="BackgroundColor" Value="{StaticResource toolbar_Color}"/>
        <Setter Property="TextColor" Value="{StaticResource white}" />
    </Style>

    <Style x:Key="ButtonRefuse" TargetType="Button">
        <!--<Setter Property="ColorControlHighlight" Value="{StaticResource favorite_ripple_light_Color}" />-->
